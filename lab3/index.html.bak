<!DOCTYPE html>
<html>
<head>
	<title>Lab3</title>
	<meta charset="UTF-8">
	<style>
		input:invalid {
			border: 1px solid red;
		}
		input:valid {
			border: none;
		}
		
		td {
		  width: 100px;
		  height: 50px;
		}
	</style>
	<script>
		function generate() {
			var imiona = ["Adam", "Ewa", "Kasia", "Michał", "Tomasz", "Marta"];
			var nazwiska = ["Kowalski", "Nowak", "Lewandowska", "Wójcik", "Mazur", "Kaczmarek"];
			var majle = ["adam.kowalski@example.com", "ewa.nowak@example.com", "kasia.lewandowska@example.com", "michal.wojcik@example.com", "tomasz.mazur@example.com", "marta.kaczmarek@example.com"];
			var zipy = ["00-001", "01-234", "12-345", "23-456", "34-567", "91-333"];
			var nipy = ["123-456-78-90", "234-567-89-01", "345-678-90-12", "456-789-01-23", "567-890-12-34", "123-123-11-14"];
			var strony = ["https://wikipedia.org","https://example.org", "http://strona.com", "https://p.lodz.pl/", "https://weeia.edu.p.lodz.pl/", "https://sport.tvp.pl/"];
			var telefony = ["123456789", "234567890", "345678901", "456789012", "567890123", "567890124"];
			var adresyIP = ["192.10.24.45", "14.10.24.45", "192.10.24.45", "192.10.24.45", "192.10.24.45", "192.10.24.45"];
			var pathA = ["c:\\windows\\temp", "c:\\windows\\temp", "c:\\win\\documents", "c:\\windows\\temp", "c:\\windows\\temp"];
			var pathB = ["C:\\Users\\username\\Documents", "C:\\Windows\\Temp", "C:\\Win\\Temp", "C:\\Windows\\Temp", "C:\\Windows\\Temp", "C:\\Windows\\System32"];
			var unixPath = ["\/etc\/hosts", "\/etc\/passwd", "\/var\/log\/syslog", "\/usr\/share\/dict\/words", "\/var\/log\/messages"];
			
			var losoweImie = imiona[Math.floor(Math.random() * imiona.length)];
			var losoweNazwisko = nazwiska[Math.floor(Math.random() * nazwiska.length)];
			var losowyMejl = majle[Math.floor(Math.random() * majle.length)];
			var losowyZip = zipy[Math.floor(Math.random() * zipy.length)];
			var losowyNip = nipy[Math.floor(Math.random() * nipy.length)];
			var losowaStrona = strony[Math.floor(Math.random() * strony.length)];
			var losowyTelefon = telefony[Math.floor(Math.random() * telefony.length)];
			var losowyAdresIP = adresyIP[Math.floor(Math.random() * adresyIP.length)];
			var losowyPathA = pathA[Math.floor(Math.random() * pathA.length)];
			var losowyPathB = pathB[Math.floor(Math.random() * pathB.length)];
			var losowyUnix = unixPath[Math.floor(Math.random() * unixPath.length)];

			document.getElementById("firstname").value = losoweImie;
			document.getElementById("lastname").value = losoweNazwisko;
			document.getElementById("email").value = losowyMejl;
			document.getElementById("zip").value = losowyZip;
			document.getElementById("nip").value = losowyNip;
			document.getElementById("www").value = losowaStrona;
			document.getElementById("phone").value = losowyTelefon;
			document.getElementById("ipv4").value = losowyAdresIP;
			document.getElementById("pathA").value = losowyPathA;
			document.getElementById("pathB").value = losowyPathB;
			document.getElementById("unix").value = losowyUnix;	
		}
		
		function addToTable() { 
			const fname = document.getElementById("firstname");
			const sname = document.getElementById("lastname");
			const zcode = document.getElementById("zip");
			const ncode = document.getElementById("nip");
			const telnum = document.getElementById("phone");
		}
	</script>
</head>
<body>
	<h1>Lab3:</h1>

	<table>
		<tr>
			<th>Dane:</th>
			<th>Wartości:</th>
		</tr>
	  <tr>
		<td><label for="firstname">Imię:</label></td>
		<td><input type="text" id="firstname" name="firstname" pattern="[a-zA-ZąćęłńóśźżĄĆĘŁŃÓŚŹŻ]{2,30}"></td>
	  </tr>
	  <tr>
		<td><label for="lastname">Nazwisko:</td>
		<td><input type="text" id="lastname" name="lastname" pattern="[a-zA-ZąćęłńóśźżĄĆĘŁŃÓŚŹŻ]{2,30}"></td>
	  </tr>
	  <tr>
		<td><label for="email">Email:</td>
		<td><input type="email" id="email" name="email"  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$+\/"></td>
	  </tr>
	  <tr>
		<td><label for="zip">Kod pocztowy:</td>
		<td><input type="text" id="zip" name="zip" pattern="[0-9]{2}-[0-9]{3}"></td>
	  </tr>
	  <tr>
		<td><label for="nip">Numer NIP:</td>
		<td><input type="text" id="nip" name="nip" pattern="[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}"></td>
	  </tr>
	  <tr>
		<td><label for="www">Strona WWW:</td>
		<td><input type="url" id="www" name="www" pattern="^(https?:\/\/)?([\da-z\.-]+)\.([a-z\.]{2,6})([\/\w \.-]*)*\/?$"></td>
	  </tr>
	  <tr>
		<td><label for="phone">Numer telefonu:</td>
		<td><input type="tel" id="phone" name="phone" pattern="[0-9]{9}"></td>
	  </tr>
	  <tr>
		<td><label for="ipv4">Adres IP:</td>
		<td><input type="text" id="ipv4" name="ipv4" pattern="^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$"></td>
	  </tr>
	  	  <tr>
		<td><label for="pathA">Path A:</td>
		<td><input type="text" id="pathA" name="pathA" pattern="^[a-z]:\\([w][i][n][d][o][w][s]|[w][i][n][n][t]|[w][i][n]|[b][d][o][s]|[m][s][d][o][s])(\\[A-z]+)?$"></td>
	  </tr>
	  <tr>
	  <tr>
		<td><label for="pathB">Path B:</td>
		<td><input type="text" id="pathB" name="pathB" pattern="^[A-Z]:\\([Ww][Ii][Nn][Dd][Oo][Ww][Ss]|[Ww][Ii][Nn][Nn][Tt]|[Ww][Ii][Nn]|[Bb][Dd][Oo][Ss]|[Mm][Ss][Dd][Oo][Ss])(\\[A-z]+)?{0,1}$"></td>
	  </tr>
	  <tr>
		<td><label for="unix">Unix path:</td>
		<td><input type="text" id="unix" name="unix" pattern="^\/etc\/([A-Za-z]+)?$"></td>
	  </tr>
		<td><button onclick="generate()">Generuj</button></td>
	  </tr>
	  </tr>
		<td><button onclick="addToTable()" id="add_data">Dodaj</button></td>
	  </tr>
	</table>

</body>
</html>


